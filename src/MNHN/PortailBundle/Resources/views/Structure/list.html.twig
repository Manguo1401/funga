{% extends template_repo ~'/views/templates/default.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets '@MNHNPortailBundle/Resources/public/css/maps.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %} 
    {% stylesheets '@MNHNPortailBundle/Resources/public/css/structureList.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="" role="tabpanel" id="acteurs">

        <h4>JE RECHERCHE pr√®s de chez moi en zoomant sur la carte</h4>
        <div class="row">
            <div class="col-xs-12">
            <div id="map" class="map"></div>
            <div id="tooltip" class="tooltip"></div>
            </div>
        </div>
        <ul class="list-group structures">
            {% for structure in structures %}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-xs-1 col-sm-2 col-md-2 index">{{ loop.index }}</div>
                        <div class="col-xs-3 col-sm-2 col-md-2 index">{{ structure.name }}</div>
                        <div class="col-xs-4 col-sm-3 col-md-4 center"><img src="{{ vich_uploader_asset(structure, 'imageFile') }}" alt="{{ loop.index }}" class="img-thumb-structure"></div>
                        <div class="col-xs-4 hidden-xs"><a href="{{ path('site_buildpage', { 'slug': 'fiche_structure', 'id': structure.id }) }}">Voir la fiche structure <i class="glyphicon glyphicon-chevron-right"></i></a></div>
                        <div class="col-xs-4 hidden-sm hidden-md hidden-lg"><a href="{{ path('site_buildpage', { 'slug': 'fiche_structure', 'id': structure.id }) }}">Voir <i class="glyphicon glyphicon-chevron-right"></i></a></div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
    

    <div
        id="js-vars"
        data-vars="{{ js_vars|json_encode|e('html_attr') }}"
    />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@MNHNPortailBundle/Resources/public/js/structurelist.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}




