{% if carousel is not null %}
  {% set items = carousel %}
{% endif %}

<div class="page-hero" id="homeCarousel">
  <div class="owl-carousel">
    {% for item in items %}
    <div class="item" style="background: url({{ vich_uploader_asset(item, 'imageFile') }});">
      <div class="container">
      <div class="carousel-caption hidden-xs">
        <h3>{{ item.title }}</h3>
        <p>{{ item.content }}</p>
      </div>
      </div>
    </div>
    {% endfor %}
  </div>


  <div class="page-hero__title">
    <div class="container">
      <h1 class="text-center">OPEN, le portail qui permet à tous de participer à l’observation de la biodiversité.</h1>
    </div>
  </div>
</div>