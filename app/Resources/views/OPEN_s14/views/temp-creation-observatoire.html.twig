{% extends template_repo ~ '/views/templates/default.html.twig' %} {# Template par defaut #}
{% set title = 'Création d’une fiche observatoire' %} {# Titre de la page - header-mea & tab du navigateur #}
{% set imageHero = 'VisuelObservatoire.jpg' %} {# Nom de l'image pour le hero de la page #}

{% block body %}

  {# Content = Contient tout ce qui concerne le contenu des pages #}
  <div class="creation-observatoire">
    <nav class="nav__creation-observatoire">
      {% set formSteps = [
      'Caractéristques',
      'Localisation',
      'Contact, réseau, résultats',
      'Autres informations'
      ]%}
      <ul>
        {% for step in formSteps %}
        <li data-id="{{ loop.index }}" {{ loop.index == 1 ? "class='active'" }}><span>{{ step }}</span></li>
        {% endfor %}
      </ul>
      <p class="text-danger hidden-xs hidden-sm">* Champs obligatoires pour valider la création de l’observatoire. Les autres champs pourront être renseignés ultérieurement.</p>
      <div class="bordered text-center hidden-xs hidden-sm">
        <strong>Je soumets mon observatoire aujourd’hui, OPEN vérifie les informations et le publie le plus rapidement possible.</strong>
      </div>
    </nav>
    <div class="form__creation-obersvatoire form-horizontal" enctype="multipart/form-data">
      <form action="#" method="post" class="inputs-line">
        {# Etape 1 #}
        {# Ajouter la classe active pour l'étape soit visible et le supprimer pour la cacher #}
        <div class="step active" data-id="1">
          <div class="step__title">Caractéristiques de l’observatoire</div>
          <div class="form-group mt-4">
            <label for="obs_nom" class="control-label col-sm-4">Nom de l'observatoire <sup>*</sup></label>
            <div class="col-sm-8">
              <input type="text" class="form-control" name="obs_nom" id="obs_nom" required>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_photo" class="control-label col-sm-4">Photo : <sup>*</sup><small>Poids max XXMO</small></label>
            <div class="col-sm-8">
              <div class="file-wrapper">
                <input type="file" name="obs_photo" id="obs_photo" required>
                <label for="obs_photo" class="w100">Télécharger</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_logo" class="control-label col-sm-4">Logo : <sup>*</sup><small>Poids max XXMO</small></label>
            <div class="col-sm-8">
              <div class="file-wrapper">
                <input type="file" name="obs_logo" id="obs_logo" required>
                <label for="obs_logo" class="w100">Télécharger</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_video" class="control-label col-sm-4">Vidéo <small>Lien url</small></label>
            <div class="col-sm-8">
              <input type="text" class="form-control" name="obs_video" id="obs_video">
            </div>
          </div>
          <div class="form-group">
            <label for="obs_status" class="control-label col-sm-4">Votre observatoire est-il ?<sup>*</sup></label>
            <div class="col-sm-8">
              <div class="multiple-radio-buttons">
                <div>
                  <input type="radio" name="obs_status" id="obs_status-encours">
                  <label for="obs_status-encours">En cours</label>
                </div>
                <div>
                  <input type="radio" name="obs_status" id="obs_status-enpause">
                  <label for="obs_status-enpause">En pause</label>
                </div>
                <div>
                  <input type="radio" name="obs_status" id="obs_status-termine">
                  <label for="obs_status-termine">Terminé</label>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_desc" class="control-label col-xs-12">Description de l'observatoire :<sup>*</sup></label>
            <div class="col-xs-12 mt-1">
              <textarea name="obs_desc" id="obs_desc" rows="4" class="form-control" required placeholder="Texte descriptif, imagé et pédagogique présentant votre projet : quand, où, quoi, comment, qui et pour qui ? Limité à 1000 caractères" maxlength="1000"></textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_objectifs" class="col-xs-12 control-label">Objectifs de l’observatoire :<sup>*</sup><small>Classer de 1 à 3 afin de prioriser les objectifs de votre observatoire (ex aequo possible)</small></label>
            <div class="col-xs-12 mt-1 table-responsive">
              <table class="table table-bordered table-notation">
                <tbody>
                  <tr>
                    <td>Collecte de données dans le cadre d’un observatoire naturaliste (la modalité est prioritaire : base de données naturalistes collaboratives)</td>
                    <td><input type="number" max="3" min="1" name="observatoire_naturaliste"></td>
                  </tr>
                  <tr>
                    <td>Collecte de données dans le cadre d’un protocole scientifique identifié (l’objectif scientifique est prioritaire, observatoire à visé de gestion/conservation)</td>
                    <td><input type="number" max="3" min="1" name="observatoire_protocole"></td>
                  </tr>
                  <tr>
                    <td>Collecte de données dans le cadre d’un observatoire à visée pédagogique / sensibilisation (le public à mobiliser est prioritaire, visée éducative ou de gestion/conservation)</td>
                    <td><input type="number" max="3" min="1" name="observatoire_pedagogique"></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_themes" class="control-label col-xs-12 mb-1">Thème(s) abordé(s) :<sup>*</sup></label>
            {% set themes = [
              {"icon": 'montagne', "label": 'En montagne'},
              {"icon": 'foret', "label": 'En forêt'},
              {"icon": 'mer', "label": 'Mer & littoral'},
              {"icon": 'lacs', "label": 'Eaux intérieures'},
              {"icon": 'ville', "label": 'En ville'},
              {"icon": 'parc', "label": 'Parcs & jardins'},
              {"icon": 'observation', "label": 'Observation des paysages'},
              {"icon": 'protege', "label": 'Espaces protégés'},
              {"icon": 'agricole', "label": 'Terres agricoles'},
              {"icon": 'ecole', "label": 'Dans mon école'},
              {"icon": 'climat', "label": 'Changement climatique'},
              {"icon": 'envahissante', "label": 'Espèces envahissantes'},
              {"icon": 'danger', "label": 'Espèces en danger'}
            ]%}
            <div class="col-sm-6">
              {% for theme in themes %}
              <div>
                <input type="checkbox" name="theme" id="obs_theme_{{ theme.icon }}">
                <label for="obs_theme_{{ theme.icon }}">{{ theme.label }}</label>
              </div>
            {% if loop.index is divisible by(7) %}
            </div>
            <div class="col-sm-6">
            {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label for="obs_animaux" class="control-label col-xs-12 mb-1">Groupe(s) étudié(s) :<sup>*</sup><small>Plusieurs taxons peuvent être sélectionnés</small></label>
