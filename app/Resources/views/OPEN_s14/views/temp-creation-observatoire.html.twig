                {% if loop.index is divisible by(2) %}
                </div>
                <div class="col-sm-6">
                {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
            <div class="col-xs-12">
              <input type="radio" name="portee_geo" id="outremer">
              <label for="outremer">Outre-Mer</label>
              <div class="checked mb-1 clearfix">
                {% set outremers = [
                  'Clipperton',
                  'Guadeloupe',
                  'Guyane',
                  'La Réunion',
                  'Martinique',
                  'Mayotte',
                  'Nouvelle-Calédonie',
                  'Polynésie française',
                  'Saint-Barthélémy',
                  'Saint-Martin',
                  'Saint-Pierre-et-Miquelon',
                  'Terres australes et antarctiques françaises (TAAF)',
                  'Wallis-et-Futuna'
                ]%}
                <div class="col-sm-6">
                  {% for outremer in outremers %}
                    <div>
                      <input type="checkbox" name="outremer-{{loop.index}}" id="outremer-{{loop.index}}">
                      <label for="outremer-{{loop.index}}">{{ outremer }}</label>
                    </div>
                {% if loop.index is divisible by(6) %}
                </div>
                <div class="col-sm-6">
                {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <a href="#" class="step-to btn btn-danger btn-lg pull-right" data-to-step="3">Je passe à l’étape suivante</a>
            </div>
          </div>
        </div>
        {# Etape 3 #}
        <div class="step active" data-id="3">
          <div class="step__title">Contact</div>
          <div class="form-group mt-4">
            <label for="obs_website" class="control-label col-sm-5">Site internet : <small>Lien url</small></label>
            <div class="col-sm-7">
              <input type="text" class="form-control" name="obs_website" id="obs_website">
            </div>
          </div>
          <div class="form-group">
            <label for="obs_facebook" class="control-label col-sm-5">Facebook : <small>Lien Facebook de l'observatoire</small></label>
            <div class="col-sm-7">
              <input type="text" class="form-control" name="obs_facebook" id="obs_facebook">
            </div>
          </div>
          <div class="form-group">
            <label for="obs_twitter" class="control-label col-sm-5">Twitter : <small>Lien Twitter de l'observatoire</small></label>
            <div class="col-sm-7">
              <input type="text" class="form-control" name="obs_twitter" id="obs_twitter">
            </div>
          </div>
          <div class="form-group">
            <label for="obs_email" class="control-label col-sm-5">Email contact de l'observatoire :<sup>*</sup></label>
            <div class="col-sm-7">
              <input type="email" class="form-control" name="obs_email" id="obs_email" required>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_structure_charge" class="control-label col-sm-5">Structure en charge de l'observatoire :<sup>*</sup></label>
            <div class="col-sm-7">
              <input type="text" name="obs_structure_charge" id="obs_structure_charge" class="form-control" disabled required value="Observatoire de la biodiversité des jardins">
            </div>
            <div class="col-xs-12">
              <span class="form_info">Si vous souhaitez modifier cette information,  merci de contacter l’administrateur : julie@julie.com</span>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_contact_charge" class="control-label col-sm-5">Contact en charge de l'observatoire :<sup>*</sup></label>
            <div class="col-sm-7">
              <input type="text" name="obs_contact_charge" id="obs_contact_charge" class="form-control" required placeholder="Nom / Prénom">
            </div>
          </div>

          <div class="step__title mt-4">Réseau</div>
          <div class="form-group mt-4">
            <label for="obs_structure_ref" class="control-label col-sm-5">Structure référente scientifiquement :</label>
            <div class="col-sm-7">
              <input type="text" name="obs_structure_ref" id="obs_structure_ref" class="form-control">
            </div>
            <div class="col-xs-12">
              <span class="form_info">Vous ne trouvez pas une structure dans cette liste ? Invitez-la à s’inscrire sur OPEN depuis votre Compte Pro, rubrique Mes Activités</span>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_responsable_scientifique" class="control-label col-sm-5">Nom du responsable scientifique :</label>
            <div class="col-sm-7">
              <input type="text" name="obs_responsable_scientifique" id="obs_responsable_scientifique" class="form-control">
            </div>
            <div class="col-xs-12">
              <span class="form_info">Cette information ne sera pas rendue visible sur le portail OPEN</span>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Ce programme s’inscrit-il dans un des réseaux d’observation suivants ?</label>
            <div class="col-xs-12 mt-1">
              {% set items = [
                'Vigie-Nature',
                'Observatoires locaux de la biodiversité',
                'Vigie-Mer',
                'Vigie Nature école',
                'Les Atlas de la Biodiversité Communale'
              ] %}
              {% for item in items %}
              <div>
                <input type="checkbox" name="obs_reseau_observation-{{loop.index}}" id="obs_reseau_observation-{{loop.index}}">
                <label for="obs_reseau_observation-{{loop.index}}">{{ item }}</label>
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label for="obs_relais-locaux" class="control-label col-sm-5">Relais locaux :</label>
            <div class="col-sm-7">
              <input type="text" name="obs_relais-locaux" id="obs_relais-locaux" class="form-control">
            </div>
            <div class="col-xs-12">
              <span class="form_info">Vous ne trouvez pas un de vos relais dans cette liste ? Invitez-le à s’inscrire sur OPEN depuis votre Compte Pro, rubrique Mes Activités</span>
            </div>
          </div>
          <div class="form-group">
            <label for="obs_partners_logos[]" class="control-label col-sm-5">Logo des partenaires : <small>Poids max XXMO</small></label>
            <div class="col-sm-7">
              <div class="file-wrapper">
                <input type="file" name="obs_partners_logos[]" id="obs_partners_logos[]" multiple>
                <label for="obs_partners_logos[]" class="w100">Télécharger</label>
              </div>
            </div>
          </div>

          <div class="step__title mt-4">Résultats <small>- Avez-vous déjà des données d’observation à partager ?</small></div>
          <div class="form-group mt-4">
            <label for="obs_resultats-pdf" class="control-label col-sm-5">Vos résultats : <small>Format PDF ou champs éditable</small></label>
            <div class="col-sm-7">
              <div class="file-wrapper">
                <input type="file" name="obs_resultats-pdf" id="obs_resultats-pdf" multiple>
                <label for="obs_photo" class="w100">Télécharger</label>
              </div>
            </div>
            <div class="col-xs-12 mt-1">
              <textarea name="obs_resultats" rows="4" class="form-control" placeholder="Limité à 500 caractères" maxlength="500"></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <a href="#" class="step-to btn btn-danger btn-lg pull-right" data-to-step="4">Je passe à l’étape suivante</a>
            </div>
          </div>
        </div>
        {# Etape 4 #}
        <div class="step active" data-id="4">
          <div class="step__title">Autres informations</div>
          <p class="text-danger">Ces données ne seront pas rendues visibles au public. Elles serviront à renseigner l’indicateur dédié aux sciences participatives de l’ONB. Seul l’indicateur global de la participation à l’ensemble des observatoires sera publié.</p>

          <div class="form-group mt-4">
            <label for="obs_date-lancement" class="col-sm-6 control-label">Date de lancement opérationnel :<sup>*</sup> <small>Année</small></label>
            <div class="col-sm-6">
              <input type="number" name="obs_date-lancement" id="obs_date-lancement" class="form-control" min="1900" max="2099" required>
            </div>
          </div>
          <div class="form-group">
            <label class="col-xs-12 control-label">Durée de l’observatoire :<sup>*</sup></label>
            <div class="col-xs-12 mt-1">
              <div>
                <input type="checkbox" name="obs_enquete-annuelle" id="obs_enquete-annuelle">
                <label for="obs_enquete-annuelle">Enquête annuelle</label>
              </div>
              <div>
                <input type="checkbox" name="obs_enquete-pluriannuel" id="obs_enquete-pluriannuel">
                <label for="obs_enquete-pluriannuel">Observatoire pluri-annuel</label>
              </div>
            </div>
          </div>

          <div class="step__title mt-4">Evaluation</div>
          <p>Choississez votre année de référence et indiquez :</p>

          <div class="form-group mt-4">
            <label class="control-label col-xs-12">Le nombre de personnes inscrites à l’observatoire :<sup>*</sup></label>
            <div class="col-xs-12">
              <span class="form_info">Une personne inscrite au projet est une personne qui a les codes d’identifications pour saisir ses données, ou qui a signifié sa volonté de participer au projet, mais elle n’a pas nécessairement contribué. Indiquez 0 si vous n’avez pas cette donnée.</span>
            </div>
            <div class="col-xs-12 table-responsive mt-1">
              <table class="table table-bordered table-notation vertical">
                <tbody>
                  <tr>
                    {% set dates = ['2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025'] %}
                    {% for date in dates %}
                    <td class="text-center">{{ date }}</td>
                    {% endfor %}
                  </tr>
                  <tr>
                    {% for date in dates %}
                    <td>
                      <input type="number" min="0" name="inscription-date-{{ date }}">
                    </td>
                    {% endfor %}
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Le nombre de participants actifs :<sup>*</sup></label>
            <div class="col-xs-12">
              <span class="form_info">Un participant actif est une personne inscrite au projet et qui a renseigné au moins une donnée au cours de l’année. Indiquez 0 si vous n’avez pas cette donnée.</span>
            </div>
            <div class="col-xs-12 table-responsive mt-1">
              <table class="table table-bordered table-notation vertical">
                <tbody>
                  <tr>
                    {% set dates = ['2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025'] %}
                    {% for date in dates %}
                    <td class="text-center">{{ date }}</td>
                    {% endfor %}
                  </tr>
                  <tr>
                    {% for date in dates %}
                    <td>
                      <input type="number" min="0" name="participants-date-{{ date }}">
                    </td>
                    {% endfor %}
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Le nombre de données élémentaires collectées :<sup>*</sup></label>
            <div class="col-xs-12">
              <span class="form_info">Une donnée élémentaire est une information saisie dans une base de données, ou envoyée, et qui n’a pas encore fait l’objet de traitement/anayse. Indiquez 0 si vous n’avez pas cette donnée.</span>
            </div>
            <div class="col-xs-12 table-responsive mt-1">
              <table class="table table-bordered table-notation vertical">
                <tbody>
                  <tr>
                    {% set dates = ['2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025'] %}
                    {% for date in dates %}
                    <td class="text-center">{{ date }}</td>
                    {% endfor %}
                  </tr>
                  <tr>
                    {% for date in dates %}
                    <td>
                      <input type="number" min="0" name="elementaires-date-{{ date }}">
                    </td>
                    {% endfor %}
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-xs-12">Autres indicateurs pour évaluer l’observatoire :</label>
            <div class="col-xs-12 mt-1">
              <div>
                <input type="radio" name="indicateur" id="indicateur_non">
                <label for="indicateur_non">Non</label>
              </div>
              <div>
                <input type="radio" name="indicateur" id="indicateur_oui">
                <label for="indicateur_oui">Oui - Précisez</label>
                <div class="checked mt-1">
                  <textarea name="indicateur_oui-precisions" class="form-control" rows="4" placeholder="Limité à 500 caractères" maxlength="500"></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-xs-12 control-label">En moyenne, combien d’années participe un observateur ?</label>
            <div class="col-md-10 col-xs-12 mt-1">
              <div class="multiple-radio-buttons">
                <div>
                  <input type="radio" name="moyenne_participation" id="moinsunan">
                  <label for="moinsunan">Moins d'un an</label>
                </div>
                <div>
                  <input type="radio" name="moyenne_participation" id="unatrois">
                  <label for="unatrois">1 à 3 ans</label>
                </div>
                <div>
                  <input type="radio" name="moyenne_participation" id="plustrois">
                  <label for="plustrois">Plus de 3 ans</label>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-xs-12 control-label">Evolution générale du programme par rapport à l’année précédent (qualificatif)</label>
            <div class="col-md-10 col-xs-12 mt-1">
              <div class="multiple-radio-buttons">
                <div>
                  <input type="radio" name="evolution" id="croissance">
                  <label for="croissance">Croissance</label>
                </div>
                <div>
                  <input type="radio" name="evolution" id="decroissance">
                  <label for="decroissance">Décroissance</label>
                </div>
                <div>
                  <input type="radio" name="evolution" id="stabilite">
                  <label for="stabilite">Stabilité</label>
                </div>
              </div>
            </div>
          </div>

          <div class="step__title mt-4">Protocole</div>

          <div class="form-group mt-4">
            <label class="control-label col-xs-12">Qui valide les données ?</label>
            <div class="col-xs-12">
              <span class="form_info">C’est la personne qui vérifie les données envoyées avant que celles-ci soient analysées. Par exemple, celui qui vérifie les identifications sur la base de photos envoyées. Cette étape n’est pas toujours effectuée et les données absurdes sont alors révélées et écartées lors de l’analyse.</span>
            </div>
            <div class="col-xs-12 mt-1">
              {% set items = [
                'Structure animatrice du projet',
                'Participants',
                'Experts validateurs <small>(participant ou expert externe au projet)</small>',
                'Partenaire scientifique'
              ] %}
              {% for item in items %}
              <div>
                <input type="checkbox" name="quivalide-{{loop.index}}" id="quivalide-{{loop.index}}">
                <label for="quivalide-{{loop.index}}">{{ item|raw }}</label>
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Qui analyse les données ?</label>
            <div class="col-xs-12">
              <span class="form_info">C’est la personne qui analyse les données envoyées par les observateurs, après validation, ou non, en amont.</span>
            </div>
            <div class="col-xs-12 mt-1">
              {% for item in items %}
              <div>
                <input type="checkbox" name="quianalyse-{{loop.index}}" id="quianalyse-{{loop.index}}">
                <label for="quianalyse-{{loop.index}}">{{ item|raw }}</label>
              </div>
              {% endfor %}
            </div>
          </div>

          <div class="step__title mt-4">Données</div>

          <div class="form-group mt-4">
            <label class="control-label col-xs-12">Sous quelle forme sont restituées les données ?</label>
            <div class="col-xs-12 mt-1">
              <div>
                <input type="checkbox" name="forme_donnees-brutes" id="forme_donnees-brutes">
                <label for="forme_donnees-brutes">Brutes</label>
              </div>
              <div>
                <input type="checkbox" name="forme_donnees-syntheses" id="forme_donnees-syntheses">
                <label for="forme_donnees-syntheses">Synthèses</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Des retours sont-ils prévus vers les contributeurs ?</label>
            <div class="col-xs-12">
              <span class="form_info">Par contributeur, on entend les observateurs, les gestionnaires de site qui saisissent les données pour le grand public, etc.</span>
            </div>
            <div class="col-xs-12 mt-1">
              <div>
                <input type="radio" name="retours_prevus" id="retours_prevus-non">
                <label for="retours_prevus-non">Non</label>
              </div>
              <div>
                <input type="radio" name="retours_prevus" id="retours_prevus-oui">
                <label for="retours_prevus-oui">Oui <small>- Préciser le lien url vers les résultats</small></label>
                <div class="checked mt-1">
                  <input type="text" class="form-control" name="retours_prevus-precisions">
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Où les données sont-elles stockées ?</label>
            <div class="col-xs-12 mt-1">
              {% set donnees = ['Base de données interne au projet', 'Base de données régionale', 'Autre'] %}
              {% for donnee in donnees %}
              <div>
                <input type="radio" name="stockage-donnees" id="stockage-donnees-{{loop.index}}">
                <label for="stockage-donnees-{{loop.index}}">{{ donnee }} {{ loop.index == loop.length ? '<small>- Précisez</small>'}}</label>
                {% if loop.index == loop.length %}
                <div class="checked mt-1">
                  <input type="text" name="stockage-donnees-precisions" id="stockage-donnees-precisions" class="form-control">
                </div>
                {% endif %}
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">L’observatoire s’inscrit-il dans le protocole SINP ? <small>Système d’Information Nature et Paysage</small></label>
            <div class="col-xs-12 col-sm-10 mt-1">
              <div class="multiple-radio-buttons">
                {% set sinp = ['Tous', 'En partie', 'Non'] %}
                {% for s in sinp %}
                <div>
                  <input type="radio" name="sinp" id="sinp-{{loop.index}}">
                  <label for="sinp-{{loop.index}}">{{ s }}</label>
                </div>
                {% endfor %}
              </div>
            </div>
          </div>

          <div class="step__title mt-4">Ressources</div>

          <div class="form-group mt-4">
            <label for="etp" class="control-label col-sm-4">Nombre d'ETP :</label>
            <div class="col-sm-4 col-sm-offset-4">
              <input type="number" class="form-control" name="etp">
            </div>
            <div class="col-xs-12">
              <span class="form_info">Equivalent à une personne travaillant à temps plein.</span>
            </div>
          </div>
          <div class="form-group">
            <label for="travailleurs" class="control-label col-sm-6">Nombre de personnes travaillant sur le projet :</label>
            <div class="col-sm-4 col-sm-offset-2">
              <input type="number" class="form-control" name="travailleurs">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-xs-12">Budget annuel :</label>
            <div class="col-xs-12">
              <span class="form_info">Comprenant le coût salarial, les coûts techniques, les coûts de communication.</span>
            </div>
            <div class="col-xs-12 mt-1">
              {% set budgets = [
                'De 1 000 à 5 000 €',
                'De 5 000 à 10 000 €',
                'De 10 000 à 50 000 €',
                'De 50 000 à 100 000 €',
                'Plus de 100 000 €'
              ] %}
              {% for budget in budgets %}
              <div>
                <input type="checkbox" name="budget-{{loop.index}}" id="budget-{{loop.index}}">
                <label for="budget-{{loop.index}}">{{ budget }}</label>
              </div>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label for="partenaires" class="control-label col-xs-12">Partenaires financiers :</label>
            <div class="col-xs-12 mt-1">
              <textarea name="partenaires" id="partenaires" rows="4" class="form-control" placeholder="Nom des partenaires financiers du projet et si possible les informations sur la répartition financière (% Privé, % Public, % ONG). Limité à 500 caractères" maxlength="500"></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-xs-12">
              <button type="submit" class="step-to btn btn-danger btn-lg pull-right">Je soumets mon observatoire</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="clearfix"></div>
  </div>


{%  endblock %}
